.timer
  font-family 'Roboto'
  font-size 10em
  font-weight 300
  margin 50px 0
  text-align center

  @media screen and (max-width 768px)
    font-size 8em

.timer-paused, .timer-uninitialized, .timer-running
  composes timer
  color black

.timer-initializing
  composes timer
  color red

.timer-ready
  composes timer
  color lime
