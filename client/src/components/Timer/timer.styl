.timer
  font-family 'Roboto'
  font-size 10em
  font-weight 400
  text-align center
  margin 0

  @media screen and (max-width 768px)
    font-size 8em

.timer-paused, .timer-uninitialized, .timer-running
  composes timer

.timer-initializing
  composes timer
  color red

.timer-ready
  composes timer
  color rgb(0, 221, 0)
