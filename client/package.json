{
  "name": "lyte-timer-client",
  "version": "0.1.0",
  "description": "The frontend for lyte-timer.",
  "main": "index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --optimize-minimize -p --config webpack.prod.config.js",
    "start": "cross-env NODE_ENV=development webpack-dev-server --config webpack.dev.config.js",
    "flow": "flow",
    "typecheck": "cd src && flow status",
    "lint": "blyss",
    "format": "prettier --single-quote --no-semi --write \"src/**/*.js\"",
    "preinstall:types": "rm -rf flow/flow-typed",
    "install:types": "flow-typed install && mv flow-typed flow",
    "test": "npm run lint --silent && flow status && cross-env NODE_ENV=test BABEL_ENV=test ava src/tests/**/*.js --fail-fast --verbose"
  },
  "author": "Saad Quadri",
  "license": "MIT",
  "dependencies": {
    "bulma-stylus": "^0.4.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "scrambo": "^0.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "ava": "^0.19.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "blyss": "^7.0.0",
    "blyss-loader": "^1.0.0",
    "cross-env": "^5.0.0",
    "css-loader": "^0.28.4",
    "cssnano": "^3.10.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.2",
    "flow-bin": "^0.47.0",
    "flow-typed": "^2.1.2",
    "html-webpack-plugin": "^2.28.0",
    "poststylus": "^0.2.3",
    "prettier": "^1.4.2",
    "react-hot-loader": "^3.0.0-beta.7",
    "redux-devtools-extension": "^2.13.2",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.2.3",
    "rimraf": "^2.6.1",
    "snazzy": "^7.0.0",
    "style-loader": "^0.18.2",
    "stylint": "^1.5.9",
    "stylint-loader": "^1.0.0",
    "stylint-stylish": "^1.4.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "url-loader": "^0.5.9",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },
  "blyss": {
    "ignore": [
      "flow/flow-typed/**/*.*"
    ]
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": {
      "presets": [
        "es2015",
        "stage-0",
        "react"
      ]
    }
  }
}
